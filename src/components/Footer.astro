---
import { Mail, Heart, ExternalLink } from 'lucide-astro';

const currentYear = new Date().getFullYear();

const footerLinks = {
  product: [
    { name: 'Features', href: '/#features' },
    { name: 'Screenshots', href: '/#screenshots' },
    { name: 'Pricing', href: '/#pricing' },
    { name: 'Download', href: '/download' },
  ],
  legal: [
    { name: 'Privacy Policy', href: '/privacy' },
    { name: 'Terms of Service', href: '/terms' },
    { name: 'EULA', href: '/eula' },
    { name: 'License', href: '/license' },
  ],
  resources: [
    { name: 'Documentation', href: '/docs' },
    { name: 'Changelog', href: '/changelog' },
    { name: 'Blog', href: '/blog' },
    { name: 'Support', href: '/support' },
  ],
  social: [
    { name: 'Email', href: 'mailto:support@devcockpit.app', icon: Mail },
  ]
};
---

<footer class="relative mt-24 border-t border-white/10">
  <!-- Background decoration -->
  <div class="absolute inset-0 bg-gradient-to-b from-transparent to-primary-950/30 pointer-events-none"></div>
  
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-8 mb-12">
      <!-- Brand -->
      <div class="lg:col-span-2">
        <div class="flex items-center gap-2 mb-4">
          <img 
            src="/logo/logo64.png" 
            alt="Dev Cockpit Logo" 
            class="w-10 h-10 rounded-xl"
          />
          <span class="text-xl font-bold">Dev Cockpit</span>
        </div>
        <p class="text-gray-400 mb-6 max-w-sm">
          Your ultimate macOS developer toolkit. Monitor, manage, and optimize your development environment.
        </p>
        <div class="flex items-center gap-2 text-sm text-gray-500">
          <span>Available on</span>
          <span class="text-primary-400">September 2025</span>
        </div>
      </div>
      
      <!-- Product Links -->
      <div>
        <h3 class="font-semibold mb-4">Product</h3>
        <ul class="space-y-3">
          {footerLinks.product.map(link => (
            <li>
              <a href={link.href} class="text-gray-400 hover:text-white transition-colors">
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Legal Links -->
      <div>
        <h3 class="font-semibold mb-4">Legal</h3>
        <ul class="space-y-3">
          {footerLinks.legal.map(link => (
            <li>
              <a href={link.href} class="text-gray-400 hover:text-white transition-colors">
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Resources -->
      <div>
        <h3 class="font-semibold mb-4">Resources</h3>
        <ul class="space-y-3">
          {footerLinks.resources.map(link => (
            <li>
              <a 
                href={link.href} 
                class={`text-gray-400 hover:text-white transition-colors inline-flex items-center gap-1 ${
                  link.soon ? 'cursor-not-allowed opacity-50' : ''
                }`}
              >
                {link.name}
                {link.soon && (
                  <span class="text-xs bg-primary-500/20 text-primary-400 px-2 py-0.5 rounded-full">
                    Soon
                  </span>
                )}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>
    
    <!-- Bottom Bar -->
    <div class="pt-8 border-t border-white/10">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <!-- Copyright -->
        <div class="text-gray-400 text-sm flex items-center gap-1">
          <span>© {currentYear} Dev Cockpit. Made with</span>
          <Heart className="w-4 h-4 text-red-500 fill-red-500" />
          <span>for macOS developers</span>
        </div>
        
        <!-- Social Links -->
        <div class="flex items-center gap-4">
          {footerLinks.social.map(link => {
            const Icon = link.icon;
            return (
              <a
                href={link.href}
                target={link.href.startsWith('http') ? '_blank' : undefined}
                rel={link.href.startsWith('http') ? 'noopener noreferrer' : undefined}
                class="p-2 glass rounded-lg hover:bg-white/10 transition-colors"
                aria-label={link.name}
              >
                <Icon className="w-5 h-5" />
              </a>
            );
          })}
        </div>
      </div>
    </div>
    
    <div class="mt-8 text-center">
      <div class="inline-flex items-center gap-2 px-4 py-2 glass rounded-full text-sm text-gray-500">
        <span>Available on</span>
        <span>•</span>
        <span>September 2025</span>
      </div>
    </div>
  </div>
</footer>