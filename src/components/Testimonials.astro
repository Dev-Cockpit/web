---
import { Star, Users, Rocket } from 'lucide-astro';

// Placeholder until we have real testimonials
const showTestimonials = false;
const testimonials = [];
---

<section id="testimonials" class="py-24 px-4 sm:px-6 lg:px-8 bg-gradient-to-b from-transparent to-primary-950/20">
  <div class="max-w-7xl mx-auto">
    {showTestimonials ? (
      <>
        <!-- Will show real testimonials when available -->
        <div class="text-center mb-12">
          <h2 class="text-4xl sm:text-5xl font-bold mb-4">
            Loved by <span class="gradient-text">Developers</span> Worldwide
          </h2>
          <p class="text-xl text-gray-400 max-w-3xl mx-auto">
            Join thousands of developers who've upgraded their macOS development experience
          </p>
        </div>
      </>
    ) : (
      <!-- Beta Program CTA -->
      <div class="text-center">
        <div class="inline-flex items-center gap-2 px-4 py-2 glass rounded-full text-sm text-primary-400 mb-6">
          <Rocket className="w-4 h-4" />
          <span>Join Our Beta Program</span>
        </div>
        <h2 class="text-4xl sm:text-5xl font-bold mb-4">
          Be Among the <span class="gradient-text">First</span>
        </h2>
        <p class="text-xl text-gray-400 max-w-3xl mx-auto mb-8">
          Dev Cockpit is launching soon! Join our beta program to get early access and help shape the future of macOS development tools.
        </p>
        
        <div class="glass rounded-2xl p-8 max-w-2xl mx-auto">
          <div class="flex items-center justify-center gap-4 mb-6">
            <Users className="w-12 h-12 text-primary-400" />
            <div class="text-left">
              <div class="text-3xl font-bold">500+</div>
              <div class="text-gray-400">Beta testers waiting</div>
            </div>
          </div>
          
          <div class="space-y-4 mb-8">
            <div class="flex items-center gap-3">
              <Star className="w-5 h-5 text-yellow-400 fill-yellow-400" />
              <span class="text-gray-300">Early access to all features</span>
            </div>
            <div class="flex items-center gap-3">
              <Star className="w-5 h-5 text-yellow-400 fill-yellow-400" />
              <span class="text-gray-300">50% discount on launch</span>
            </div>
            <div class="flex items-center gap-3">
              <Star className="w-5 h-5 text-yellow-400 fill-yellow-400" />
              <span class="text-gray-300">Direct feedback channel with developers</span>
            </div>
          </div>
          
          <a 
            href="/download" 
            class="inline-flex items-center gap-2 px-8 py-4 text-lg font-semibold gradient-primary rounded-xl hover:scale-105 transition-all duration-200 glow"
          >
            Request Beta Access
          </a>
        </div>
      </div>
    )}
  </div>
</section>