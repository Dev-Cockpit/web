---
import { Menu, X, Sparkles, Download } from 'lucide-astro';
---

<nav class="fixed top-0 left-0 right-0 z-50 glass-nav">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-2 group">
        <img 
          src="/logo/logo64.png" 
          alt="Dev Cockpit Logo" 
          class="w-10 h-10 rounded-xl group-hover:scale-110 transition-transform"
        />
        <span class="text-xl font-bold">Dev Cockpit</span>
      </a>
      
      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-8">
        <a href="/#features" class="nav-link">Features</a>
        <a href="/#pricing" class="nav-link">Pricing</a>
        <a href="/docs" class="nav-link">Docs</a>
        <a href="/blog" class="nav-link">Blog</a>
        <a href="/support" class="nav-link">Support</a>
      </div>
      
      <!-- CTA Buttons -->
      <div class="hidden md:flex items-center gap-4">
        <a href="/download" class="cta-button-gradient">
          <Download className="w-4 h-4" />
          <span>Get App</span>
        </a>
      </div>
      
      <!-- Mobile Menu Button -->
      <button id="mobile-menu-btn" class="md:hidden p-2 glass rounded-lg">
        <Menu className="w-6 h-6" id="menu-icon" />
        <X className="w-6 h-6 hidden" id="close-icon" />
      </button>
    </div>
  </div>
  
  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden md:hidden glass-nav border-t border-white/10">
    <div class="px-4 py-4 space-y-2">
      <a href="/#features" class="mobile-nav-link">Features</a>
      <a href="/#pricing" class="mobile-nav-link">Pricing</a>
      <a href="/docs" class="mobile-nav-link">Docs</a>
      <a href="/blog" class="mobile-nav-link">Blog</a>
      <a href="/support" class="mobile-nav-link">Support</a>
      <div class="pt-4">
        <a href="/download" class="cta-button-gradient w-full justify-center">
          <Download className="w-4 h-4" />
          <span>Get App</span>
        </a>
      </div>
    </div>
  </div>
</nav>

<style>
  .glass-nav {
    backdrop-filter: blur(12px);
    background-color: rgba(10, 10, 15, 0.8);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }
  
  .nav-link {
    position: relative;
    color: #9ca3af;
    transition: color 0.2s;
    padding: 0.5rem 0;
  }
  
  .nav-link:hover {
    color: #fff;
  }
  
  .nav-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background: linear-gradient(to right, #3b82f6, #a855f7);
    transition: width 0.3s;
  }
  
  .nav-link:hover::after {
    width: 100%;
  }
  
  .mobile-nav-link {
    display: block;
    padding: 0.75rem 1rem;
    color: #9ca3af;
    border-radius: 0.5rem;
    transition: all 0.2s;
  }
  
  .mobile-nav-link:hover {
    color: #fff;
    background-color: rgba(255, 255, 255, 0.05);
  }
  
  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1.5rem;
    background: linear-gradient(to right, #3b82f6, #a855f7);
    color: white;
    font-weight: 600;
    border-radius: 0.75rem;
    transition: all 0.2s;
  }
  
  .cta-button:hover {
    transform: scale(1.05);
    box-shadow: 0 10px 25px -5px rgba(59, 130, 246, 0.4);
  }

  .cta-button-gradient {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1.5rem;
    background: linear-gradient(to right, #3b82f6, #a855f7);
    color: white;
    font-weight: 600;
    border-radius: 0.75rem;
    transition: all 0.2s;
  }

  .cta-button-gradient:hover {
    transform: scale(1.05);
    box-shadow: 0 10px 25px -5px rgba(59, 130, 246, 0.4);
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const mobileMenuBtn = document.getElementById('mobile-menu-btn');
    const mobileMenu = document.getElementById('mobile-menu');
    const menuIcon = document.getElementById('menu-icon');
    const closeIcon = document.getElementById('close-icon');
    
    if (mobileMenuBtn && mobileMenu) {
      mobileMenuBtn.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');
        menuIcon?.classList.toggle('hidden');
        closeIcon?.classList.toggle('hidden');
      });
      
      // Close mobile menu when clicking a link
      const mobileLinks = mobileMenu.querySelectorAll('a');
      mobileLinks.forEach(link => {
        link.addEventListener('click', () => {
          mobileMenu.classList.add('hidden');
          menuIcon?.classList.remove('hidden');
          closeIcon?.classList.add('hidden');
        });
      });
    }
    
    // Smooth scroll for anchor links
    document.querySelectorAll('a[href^="/#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        const href = this.getAttribute('href');
        if (href && href.startsWith('/#')) {
          // Check if we're on the homepage
          if (window.location.pathname === '/') {
            e.preventDefault();
            const targetId = href.substring(2);
            const targetElement = document.getElementById(targetId);
            if (targetElement) {
              const navHeight = 64; // Height of navbar
              const targetPosition = targetElement.offsetTop - navHeight;
              window.scrollTo({
                top: targetPosition,
                behavior: 'smooth'
              });
            }
          } else {
            // If we're on another page, navigate to homepage with hash
            window.location.href = href;
          }
        }
      });
    });
  });
</script>