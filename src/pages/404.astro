---
import Layout from '../layouts/Layout.astro';
import { Home, ArrowLeft, Search, Terminal } from 'lucide-astro';
---

<Layout 
  title="404 - Page Not Found | Dev Cockpit"
  description="The page you're looking for doesn't exist."
  noindex={true}
>
  <main class="min-h-screen flex items-center justify-center px-4 sm:px-6 lg:px-8">
    <div class="max-w-2xl w-full text-center">
      <!-- 404 Animation -->
      <div class="relative mb-8">
        <div class="text-[150px] sm:text-[200px] font-bold gradient-text opacity-20">404</div>
        <div class="absolute inset-0 flex items-center justify-center">
          <div class="glass rounded-2xl p-6">
            <Terminal className="w-16 h-16 text-primary-400 animate-pulse" />
          </div>
        </div>
      </div>
      
      <!-- Error Message -->
      <h1 class="text-3xl sm:text-4xl font-bold mb-4">Page Not Found</h1>
      <p class="text-xl text-gray-400 mb-8">
        Looks like this page got lost in the development environment.
      </p>
      
      <!-- Code Block -->
      <div class="glass-dark rounded-xl p-4 mb-8 text-left max-w-md mx-auto">
        <div class="flex items-center gap-2 mb-3">
          <div class="w-3 h-3 rounded-full bg-red-500"></div>
          <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
          <div class="w-3 h-3 rounded-full bg-green-500"></div>
        </div>
        <pre class="text-sm text-gray-300 font-mono">
<code>$ curl https://devcockpit.app{Astro.url.pathname}
<span class="text-red-400">HTTP/1.1 404 Not Found</span>
<span class="text-gray-500">Content-Type: text/html</span>

<span class="text-yellow-400">Error:</span> Resource not found
<span class="text-blue-400">Suggestion:</span> Check the URL or go home</code>
        </pre>
      </div>
      
      <!-- Actions -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a 
          href="/" 
          class="inline-flex items-center justify-center gap-2 px-6 py-3 gradient-primary rounded-xl font-semibold hover:scale-105 transition-all duration-200 glow"
        >
          <Home className="w-5 h-5" />
          Go Home
        </a>
        
        <button 
          onclick="history.back()"
          class="inline-flex items-center justify-center gap-2 px-6 py-3 glass rounded-xl font-semibold hover:bg-white/10 transition-all duration-200"
        >
          <ArrowLeft className="w-5 h-5" />
          Go Back
        </button>
      </div>
      
      <!-- Helpful Links -->
      <div class="mt-12 p-6 glass rounded-2xl">
        <p class="text-gray-400 mb-4">Looking for something specific?</p>
        <div class="flex flex-wrap justify-center gap-3 text-sm">
          <a href="/#features" class="text-primary-400 hover:text-primary-300 underline">Features</a>
          <span class="text-gray-600">•</span>
          <a href="/#pricing" class="text-primary-400 hover:text-primary-300 underline">Pricing</a>
          <span class="text-gray-600">•</span>
          <a href="/#faq" class="text-primary-400 hover:text-primary-300 underline">FAQ</a>
          <span class="text-gray-600">•</span>
          <a href="/support" class="text-primary-400 hover:text-primary-300 underline">Support</a>
        </div>
      </div>
    </div>
  </main>
</Layout>