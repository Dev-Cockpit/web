---
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';
import { BookOpen, Calendar, Clock, ArrowRight, Tag } from 'lucide-astro';

const blogPosts = [
  {
    title: 'Introducing Dev Cockpit: Your Ultimate macOS Developer Toolkit',
    slug: 'introducing-dev-cockpit',
    date: 'September 1, 2025',
    readTime: '5 min read',
    category: 'Announcement',
    excerpt: 'We\'re excited to announce the launch of Dev Cockpit, a premium system monitoring and development toolkit designed exclusively for Apple Silicon Macs.',
    image: '/images/blog/launch.jpg',
    featured: true
  },
  {
    title: 'Why We Built Dev Cockpit for Apple Silicon',
    slug: 'built-for-apple-silicon',
    date: 'January 28, 2025',
    readTime: '4 min read',
    category: 'Engineering',
    excerpt: 'Learn about the technical decisions and optimizations that make Dev Cockpit blazing fast on M1, M2, and M3 Macs.',
    image: '/images/blog/apple-silicon.jpg'
  },
  {
    title: 'Managing Homebrew Packages Like a Pro',
    slug: 'homebrew-management-tips',
    date: 'January 25, 2025',
    readTime: '6 min read',
    category: 'Tutorial',
    excerpt: 'Discover advanced tips and tricks for managing your Homebrew packages efficiently with Dev Cockpit.',
    image: '/images/blog/homebrew.jpg'
  }
];

const categories = ['All', 'Announcement', 'Engineering', 'Tutorial', 'Updates'];
---

<Layout 
  title="Blog - Dev Cockpit"
  description="Latest news, updates, and tutorials about Dev Cockpit. Learn tips and tricks for macOS development."
>
  <main class="min-h-screen py-24 px-4 sm:px-6 lg:px-8">
    <div class="max-w-7xl mx-auto">
      <!-- Header -->
      <div class="text-center mb-12">
        <div class="inline-flex items-center gap-2 px-4 py-2 glass rounded-full text-sm text-gray-400 mb-6">
          <BookOpen className="w-4 h-4" />
          <span>Blog</span>
        </div>
        <h1 class="text-4xl sm:text-5xl font-bold mb-4">
          News & <span class="gradient-text">Updates</span>
        </h1>
        <p class="text-xl text-gray-400 max-w-3xl mx-auto">
          Stay informed about the latest features, tips, and development insights
        </p>
      </div>

      <!-- Category Filter -->
      <div class="flex flex-wrap justify-center gap-3 mb-12">
        {categories.map((category) => (
          <button class={`px-4 py-2 rounded-xl transition-all ${
            category === 'All' 
              ? 'glass-active font-semibold' 
              : 'glass hover:bg-white/10'
          }`}>
            {category}
          </button>
        ))}
      </div>

      <!-- Featured Post -->
      {blogPosts.filter(post => post.featured).map(post => (
        <article class="glass rounded-3xl overflow-hidden mb-12">
          <div class="grid md:grid-cols-2 gap-8">
            <div class="aspect-video bg-gradient-to-br from-primary-500/20 to-purple-600/20 flex items-center justify-center">
              <BookOpen className="w-24 h-24 text-white/20" />
            </div>
            <div class="p-8 flex flex-col justify-center">
              <div class="flex items-center gap-4 mb-4">
                <span class="px-3 py-1 glass rounded-full text-sm text-primary-400">
                  {post.category}
                </span>
                <span class="text-sm text-gray-400">Featured</span>
              </div>
              <h2 class="text-3xl font-bold mb-4">
                <a href={`/blog/${post.slug}`} class="hover:text-primary-400 transition-colors">
                  {post.title}
                </a>
              </h2>
              <p class="text-gray-300 mb-6">
                {post.excerpt}
              </p>
              <div class="flex items-center justify-between">
                <div class="flex items-center gap-4 text-sm text-gray-400">
                  <span class="flex items-center gap-1">
                    <Calendar className="w-4 h-4" />
                    {post.date}
                  </span>
                  <span class="flex items-center gap-1">
                    <Clock className="w-4 h-4" />
                    {post.readTime}
                  </span>
                </div>
                <a href={`/blog/${post.slug}`} class="inline-flex items-center gap-2 text-primary-400 hover:text-primary-300 transition-colors">
                  Read More
                  <ArrowRight className="w-4 h-4" />
                </a>
              </div>
            </div>
          </div>
        </article>
      ))}

      <!-- Blog Grid -->
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {blogPosts.filter(post => !post.featured).map(post => (
          <article class="glass rounded-2xl overflow-hidden group hover:scale-105 transition-transform">
            <div class="aspect-video bg-gradient-to-br from-primary-500/20 to-purple-600/20 flex items-center justify-center">
              <BookOpen className="w-16 h-16 text-white/20" />
            </div>
            <div class="p-6">
              <div class="flex items-center gap-2 mb-3">
                <span class="px-2 py-1 glass rounded text-xs text-primary-400">
                  {post.category}
                </span>
              </div>
              <h3 class="text-xl font-semibold mb-3 group-hover:text-primary-400 transition-colors">
                <a href={`/blog/${post.slug}`}>
                  {post.title}
                </a>
              </h3>
              <p class="text-gray-400 text-sm mb-4 line-clamp-2">
                {post.excerpt}
              </p>
              <div class="flex items-center justify-between text-xs text-gray-500">
                <span class="flex items-center gap-1">
                  <Calendar className="w-3 h-3" />
                  {post.date}
                </span>
                <span class="flex items-center gap-1">
                  <Clock className="w-3 h-3" />
                  {post.readTime}
                </span>
              </div>
            </div>
          </article>
        ))}
      </div>

      <!-- Coming Soon Notice -->
      <div class="glass rounded-2xl p-12 text-center mt-12">
        <h2 class="text-2xl font-bold mb-4">More Content Coming Soon</h2>
        <p class="text-gray-400 mb-6 max-w-2xl mx-auto">
          We're preparing in-depth tutorials, development insights, and feature spotlights. 
          Subscribe to our newsletter to be notified when new articles are published.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 max-w-md mx-auto">
          <input 
            type="email" 
            placeholder="Enter your email" 
            class="flex-1 px-4 py-3 glass rounded-xl focus:outline-none focus:ring-2 focus:ring-primary-500"
          />
          <button class="cta-button">
            Subscribe
          </button>
        </div>
      </div>

      <!-- Newsletter Signup -->
      <div class="mt-16 glass rounded-3xl p-8 bg-gradient-to-r from-primary-500/10 to-purple-600/10">
        <div class="text-center">
          <h2 class="text-2xl font-bold mb-4">Developer Tips & Tricks</h2>
          <p class="text-gray-400 mb-6">
            Get weekly insights on macOS development, productivity tips, and Dev Cockpit tutorials
          </p>
          <div class="flex flex-col sm:flex-row gap-4 max-w-md mx-auto">
            <input 
              type="email" 
              placeholder="developer@example.com" 
              class="flex-1 px-4 py-3 glass rounded-xl focus:outline-none focus:ring-2 focus:ring-primary-500"
            />
            <button class="cta-button-gradient">
              Join Newsletter
            </button>
          </div>
          <p class="text-xs text-gray-500 mt-4">
            No spam. Unsubscribe anytime.
          </p>
        </div>
      </div>
    </div>
  </main>
  <Footer />
</Layout>

<style>
  .glass {
    background-color: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(12px);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .glass-active {
    background-color: rgba(59, 130, 246, 0.2);
    backdrop-filter: blur(12px);
    border: 1px solid rgba(59, 130, 246, 0.3);
  }

  .gradient-text {
    background: linear-gradient(to right, #60a5fa, #a78bfa);
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    border-radius: 0.75rem;
    font-weight: 600;
    transition: all 0.2s;
    background-color: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(12px);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .cta-button:hover {
    background-color: rgba(255, 255, 255, 0.1);
  }

  .cta-button-gradient {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    border-radius: 0.75rem;
    font-weight: 600;
    transition: all 0.2s;
    background: linear-gradient(to right, #3b82f6, #a855f7);
  }

  .cta-button-gradient:hover {
    box-shadow: 0 20px 25px -5px rgba(59, 130, 246, 0.25);
    transform: scale(1.05);
  }

  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>